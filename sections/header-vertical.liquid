{%- style -%}
  {%- assign opnav  = se_stts.opnav | divided_by: 100.0 -%}
  .sr4-header__wrapper {
    --h-text-color: {{ se_stts.clnav }};
    --h-text-color-rgb: {{ se_stts.clnav | color_to_rgb | remove: 'rgba(' | remove: 'rgb(' | remove: ')' }};
    --h-text-color-hover: {{ se_stts.clnav_hover }};
    --h-bg-color: {{ se_stts.bgnav | color_modify: 'alpha', opnav }};
    background-color: var(--h-bg-color);
  }
  .sr4-count-box {
    --h-count-bgcolor: {{ se_stts.bg_hc }};
    --h-count-color: {{ se_stts.cl_hc }};
  }

  {%- if h__bgimg != blank %}
    .sr4-header__bgimg {
      background-size: cover;
      background-repeat: no-repeat;
    }
  {%- endif -%}


  .sr4-section-header [data-header-height] {
    min-height: {{ se_stts.height }}px;
  }
  .sr4-header__logo img {
    padding-top: 5px;
    padding-bottom: 5px;
    transform: translateZ(0);
    max-height: inherit;
    height: auto;
    width: 100%;
    max-width: 100%;
  }
  .sr4-header__logo img[src*=".svg"] {
    height: 100%;
    perspective: 800px;
    -webkit-perspective: 800px;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }
  .sr4-site-nav__icons .sr4-site-nav__icon {
    padding: 0 6px;
    display: inline-block;
    line-height: 1;
  }
  .sr4-site-nav__icons svg.sr4-icon {
    color: var(--h-text-color);
    line-height: 1;
    vertical-align: middle;
    transition: color 0.2s ease-in-out;
    width: 22px;
    height: 22px;
  }
  .sr4-site-nav__icons.sr4-use__kalles svg.sr4-icon--account {
    width: 24px;
    height: 24px;
  }
  .sr4-site-nav__icons.sr4-use__line svg.sr4-icon {
    width: 25px;
    height: 25px;
  }
  .sr4-site-nav__icon > a:hover svg.sr4-icon {
    color: var(--h-text-color-hover);
  }
  .sr4-site-nav__icon a {
    display: inline-block;
    line-height: 1;
  }
  .sr4-site-nav__cart > a,
  .sr4-push-menu-btn,
  .sr4-col__textSocial,
  .sr4-col__textSocial a {
    color: var(--h-text-color)
  }
  .sr4-site-nav__cart > a:hover,
  .sr4-col__textSocial a:hover {
    color: var(--h-text-color-hover)
  }
  .sr4-section-header .sr4-top-bar__currencies,
  .sr4-section-header .sr4-top-bar__languages {
    margin: 15px 7.5px 0;
  }
  .sr4-section-header .sr4-top-bar__currencies button,
  .sr4-section-header .sr4-top-bar__languages button {
    background: transparent;
    color: var(--h-text-color);
    display: flex;
    padding: 0;
    align-items: center;
    line-height: 20px;
    font-size: inherit;
  }
  .sr4-section-header .sr4-top-bar__currencies button svg,
  .sr4-section-header .sr4-top-bar__languages button svg {
    width: 8px;
    margin-left: 5px;
  }
  .rtl_true .sr4-section-header .sr4-top-bar__currencies button svg,
  .rtl_true .sr4-section-header .sr4-top-bar__languages button svg {
    margin-left: 0;
    margin-right: 5px;
  }
  .sr4-section-header .sr4-top-bar__currencies .sr4-dropdown__wrapper,
  .sr4-section-header .sr4-top-bar__languages .sr4-dropdown__wrapper {
    padding: 15px;
  }
  .sr4-section-header .sr4-top-bar__currencies .sr4-dropdown__wrapper button.is--selected,
  .sr4-section-header .sr4-top-bar__languages .sr4-dropdown__wrapper button.is--selected {
    color: var(--h-text-color-hover)
  }
  @media (min-width: 768px) {
    .sr4-site-nav__icons .sr4-site-nav__icon {
      padding: 0 8px;
    }
    .sr4-section-header .sr4-top-bar__currencies .sr4-dropdown__wrapper,
    .sr4-section-header .sr4-top-bar__languages .sr4-dropdown__wrapper {
      min-width: 100px;
      max-width: 300px;
      width: auto;
    }
  }
  @media (min-width: 1025px) {
    .shopify-section-header-hidden {
      transform: none !important;
    }
    .sr4-website-wrapper {
      padding-inline-start: 280px;
    }
    .sr4-drawer.sr4-drawer__left {
      left: 280px;
    }
    .sr4-layout_vertical {
      position: fixed;
      width: 280px;
      min-height: 100vh;
      z-index: 1000;
      top: 0;
      left: 0;
      bottom: 0;
      background-color: #fff;
      border-right: 2px solid rgba(150, 150, 150, .15);
      padding: 60px 0
    }
    .sr4-layout_vertical .sr4-col-group_btns {
      margin-top: 25px;
    }
    .sr4-col__textSocial p {
      margin-bottom: 0;
    }
    #sr4-nav-ul {
      display: block !important;
      margin: 35px 0 30px;
    }
    .sr4-nav__ul > li > a {
      color: var(--h-text-color);
      padding: 5px 0;
      text-transform: none;
      min-height: 50px;
      border-bottom: 1px solid rgba(var(--h-text-color-rgb), 0.15);
      font-family: var(--font-family-{{se_stts.fm_nav}});
      font-weight: {{ se_stts.fw_nav }};
      font-size: {{ se_stts.fs_nav }}px;
      {%- if se_stts.ls_nav != 0 %}letter-spacing: {{ se_stts.ls_nav }}px;
    {% endif -%}
  }
  .sr4-nav__ul > li > a:hover {
    color: var(--h-text-color-hover) !important
  }

  .sr4-layout_vertical .sr4-type__mega > .sr4-sub-menu,
  .sr4-layout_vertical .sr4-type__drop > .sr4-sub-menu {
    top: 0;
    left: 100%;
  }
  .sr4-layout_vertical .menu-width__full .sr4-sub-menu {
    width: calc(100vw - 280px);
  }
  #sr4-nav-ul .sr4-icon-select-arrow {
    transform: rotate(270deg);
  }
  .sr4-nav-arrow__true .sr4-nav__ul > li > a {
    padding-right: 30px;
  }
  {%- if se_stts.enable_active %}
    .sr4-nav__ul > li.is--nav__active > a {
      color: var(--h-text-color-hover) !important;
      transition: none;
    }
  {%- endif -%}
}

@media (max-width: 1024px) {
