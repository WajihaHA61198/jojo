{%- liquid
    assign image_fix = image_nt | image_tag
    assign sid = section.id
    assign se_stts = section.settings
    assign stt_layout = se_stts.layout
    assign stt_image_bg = se_stts.image_bg
    assign img_ratio = se_stts.image_ratio
    assign image_position = se_stts.image_position
    if stt_layout == 'sr4-se-container' 
        assign html_layout = '<div class="sr4-container">__</div></div>' | split:'__'
    elsif stt_layout == 'sr4-container-wrap'
        assign html_layout = '<div class="sr4-container">__</div>' | split:'__'
    elsif stt_layout == 'sr4-site-wrapper'
        assign html_layout = '<div class="sr4-site-wrapper">__</div>' | split: '__'
    else
        assign html_layout = '__' | split:'__'
    endif
    assign image_ratio = se_stts.image_ratio
    if image_ratio == "ratioadapt"
      assign imgatt = ''
     else 
      assign imgatt = 'data-'
    endif
    assign use_button = false
    assign sr4_se_class = 'sr4_nt_se_' |append:sid
    if se_stts.use_cus_css and se_stts.code_cus_css != blank
        render 'se_cus_css',code_cus_css:se_stts.code_cus_css,sr4_se_class:sr4_se_class
    endif 
-%}
<div class="sr4-section-inner {{sr4_se_class}} sr4_nt_se_{{sid}} {{stt_layout}}{% if stt_image_bg != blank and stt_layout != 'sr4-se-container' %} sr4-has-imgbg lazyloadsr4{% endif %}" {% if stt_image_bg != blank and stt_layout != 'sr4-se-container' %} data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto"  data-optimumx="2"{% endif %} {% render 'section_style',se_stts:se_stts -%} >
    {{-html_layout[0]-}}
    {%- if stt_layout == 'sr4-se-container' -%}
    <div class="sr4-container-inner{% if stt_image_bg != blank %} sr4-has-imgbg lazyloadsr4{% endif %}" {% if stt_image_bg != blank %} data-bgset="{{ stt_image_bg | image_url: width: 1 }}" data-sizes="auto"  data-optimumx="2"{% endif %}>{% endif -%}
        {%- render 'section_tophead',se_stts:se_stts -%}
        <div class="sr4-row sr4-justify-content-center">
            <div class="sr4-col-item sr4-col-md-8 sr4-col-12 sr4-text-{{se_stts.txt_align}} sr4_{{img_ratio}} sr4_position_{{image_position}}">
                {%- if section.blocks.size > 0 -%}
                    {%- for block in section.blocks-%}
                        {%- assign bk_stts = block.settings -%}
                        {%- case block.type -%}
                            {%- when 'bl_image' -%}
                                {%- assign image = bk_stts.image -%}

                                <div class="sr4-about-us-img sr4-border__{{bk_stts.use_border}} sr4-pr sr4-oh" style="--mgb:{{bk_stts.mgb}}px;--mgb-mb:{{bk_stts.mgb_mb}}px;">
                                    {%- if image != blank -%}
                                        <div class="sr4-d-block sr4_ratio sr4-bg-11" style="background: url({{ image | image_url: width: 1 }});{{imgatt}}--aspect-ratioapt: {{image.aspect_ratio | default: 2}}">
                                            <img class="lazyloadsr4 sr4-lz--fadeIn" data-src="{{ image | image_url: width: 1 }}" {% if image.presentation.focal_point != '50.0% 50.0%' %} style="object-position: {{image.presentation.focal_point}}"{% endif %} data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="{% render 'img_svg',w:image.width,h:image.height %}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt | escape }}">
                                        </div>
                                    {%- else -%} 
                                        <div class="sr4_ratio" style="--aspect-ratioapt:2">
                                            {{ 'image' | placeholder_svg_tag: 'sr4-placeholder-svg' }}
                                        </div>      
                                    {%- endif -%}
                                {% liquid assign border_type = bk_stts.border_type %}
                                {% case border_type %} 
                                {% when '1' %}  
                                    <span class="sr4_br_11"></span><span class="sr4_br_22"></span><span class="sr4_br_33"></span><span class="sr4_br_44"></span>
                                {% when '2' %}
                                    <span class="sr4_br_1"></span><span class="sr4_br_2"></span><span class="sr4_br_3"></span><span class="sr4_br_4"></span>
                                {% endcase %}
                                    {%- if bk_stts.video_url != blank -%}
                                        <div class="sr4-pa sr4-t-0 sr4-l-0 sr4-r-0 sr4-b-0 sr4-d-flex sr4-justify-content-center sr4-align-items-center">
                                            <a data-open-mfp-iframe class="sr4-d-flex sr4-justify-content-center sr4-align-items-center sr4-video-control__play" href="{{bk_stts.video_url}}" target="_blank" >
                                                <svg aria-hidden="true" focusable="false" role="presentation" class="sr4-icon-play" viewBox="0 0 20 40"><path fill-rule="evenodd" clip-rule="evenodd" d="M23.6 16.8L7 1.5C5.6.3 4 .2 2.9.7 1.6 1.4.8 2.7.7 3.8v31.7c0 1.8 1.1 3.3 3.1 3.3 1.5 0 2.5-.5 3.4-1.4l16.4-15.7c1.5-1.4 1.5-3.6 0-4.9z"></path></svg>
                                            </a>
                                        </div> 
                                    {%- endif -%}
                                </div>   
                            {%- when 'bl_text' -%}
                                <div class="sr4-about-us-txt sr4-rte" style="--mgb:{{bk_stts.mgb}}px;--mgb-mb:{{bk_stts.mgb_mb}}px;">{{bk_stts.text}}</div>
                            {%- when 'bl_sig' -%} 
                                {%- assign image_sig = bk_stts.image_sig -%}
                                <div class="sr4-about_us_sig sr4-pr sr4-d-inline-block" style="--mgb:{{bk_stts.mgb}}px;--mgb-mb:{{bk_stts.mgb_mb}}px;">
                                    {%- if image_sig != blank -%}
                                        <img {% if image_sig.presentation.focal_point != '50.0% 50.0%' %} style="object-position: {{image_sig.presentation.focal_point}}"{% endif %} class="lazyloadsr4 sr4-lz--fadeIn" data-src="{{ image_sig | image_url: width: 1 }}" data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]" data-optimumx="2" data-sizes="auto" src="{% render 'img_svg',w:image_sig.width,h:image_sig.height %}" width="{{ image_sig.width }}" height="{{ image_sig.height }}" alt="{{ image_sig.alt | escape }}">
                                        <span class="lazyloadsr4-loader"></span>
                                    {%- else -%}
                                        <img class="lazyloadsr4 sr4-lz--fadeIn" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{"signature.png" | asset_url }}" alt="">    
                                        <span class="lazyloadsr4-loader"></span>
                                    {%- endif -%}
                                </div>  
                            {%- when 'bl_button' -%}
                                {%- if bk_stts.button_link != blank and bk_stts.button_label != blank  %}
                                    {%- assign use_button = true -%}
                                    {%- assign button_style = bk_stts.button_style -%}
                                    <a class="sr4-about-us-btn sr4-btn sr4-btn-base sr4-btn-style-{{button_style}} sr4-btn-size-{{bk_stts.btn_size}} sr4-btn-color-{{bk_stts.btn_cl}} {% if button_style == 'default' or button_style == 'outline'%}sr4-btn-effect-{{bk_stts.button_effect}} sr4-btn-radius-{{bk_stts.btn_bdr}}{% endif %}" href="{{bk_stts.button_link}}"  target="{{bk_stts.open_link}}" style="--mgb:{{bk_stts.mgb}}px;--mgb-mb:{{bk_stts.mgb_mb}}px;">{{bk_stts.button_label}} {%- if bk_stts.btn_icon -%}<svg class="sr4-btn-icon"><use xlink:href="#sr4-icon-btn"></use></svg>{%- endif -%}</a>
                                {%- endif -%} 
                        {%- endcase -%}
                    {%- endfor -%}
                {%- endif -%}
            </div>    
        </div> 
    {{-html_layout[1]-}}
</div>
{%- if use_button -%}
    {{ 'button-style.css' | asset_url | stylesheet_tag }}
    <link href="{{ 'custom-effect.css' | asset_url }}" rel="stylesheet" media="print" onload="this.media='all'">
{%- endif -%}
