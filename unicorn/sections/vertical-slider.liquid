{{ 'vertical-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'vertical.js' | asset_url }}" defer="defer"></script>

<section class="vertical-slider">
  <div class="vs-wrapper">
    {% for block in section.blocks %}
      {% comment %}
        <div class="vs-slide" style="background-image: url({{ block.settings.image | img_url: '1600x' }})">
          <div class="vs-content">
            <h2>{{ block.settings.heading }}</h2>
          </div>
          <a
            href="{{ block.settings.banner_link | default: routes.all_products_collection_url }}"
            class="sr4-full-width-link"
          ></a>
        </div>
      {% endcomment %}
      <div class="vs-slide">
        <picture>
          <!-- mobile first -->
          {% if block.settings.image_mobile != blank %}
            <source media="(max-width: 767px)" srcset="{{ block.settings.image_mobile | img_url: '800x' }}">
          {% endif %}
          <!-- fallback desktop -->
          <img src="{{ block.settings.image | img_url: '1600x' }}" alt="{{ block.settings.heading | escape }}">
        </picture>

        <div class="vs-content">
          <h2>{{ block.settings.heading }}</h2>
        </div>
        <a
          href="{{ block.settings.link | default: routes.all_products_collection_url }}"
          class="sr4-full-width-link"
        ></a>
      </div>
    {% endfor %}
  </div>

  <div class="vs-dots">
    {% for block in section.blocks %}
      <span class="vs-dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Vertical Slider",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image (desktop)"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "url",
          "id": "banner_link",
          "label": "Linking"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Vertical Slider"
    }
  ]
}
{% endschema %}
