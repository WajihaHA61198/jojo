{%- assign gavatar = comment.email | remove: ' ' | strip_newlines | downcase | md5 -%}
<div class="sr4-row sr4-align-items-center sr4-gx-20">
  <div class="sr4-col-item sr4-col-auto sr4-col_avatar_cm sr4-pr"><img
      alt="sr4-avatar"
      src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
      data-src="https://www.gravatar.com/avatar/{{ gavatar }}?s=80&d=mm&r=g"
      data-srcset="https://www.gravatar.com/avatar/{{ gavatar }}?s=160&d=mm&r=g 2x"
      class="lazyloadsr4 sr4-comment__avatar"><span class="lazyloadsr4-loader"></span>
  </div>
  <div class="sr4-col-item sr4-col">
    <h5 class="sr4-comment__author">{{ comment.author }}</h5>
    <div class="sr4-comment__content">{{ comment.content }}</div>
    <div class="sr4-comment__date sr4-fnt-fm-3">{{ comment.created_at | date: '%B %e, %Y at %R%P' }}</div>
  </div>
</div>